<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Configuration -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleDisplayName</key>
    <string>Cravlr</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <!-- Launch Storyboard -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>
    
    <!-- Device Requirements -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    
    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- Status Bar -->
    <key>UIStatusBarHidden</key>
    <false/>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>
    
    <!-- Custom URL Schemes (Deep Linking Fallback & OAuth) -->
    <key>CFBundleURLTypes</key>
    <array>
        <!-- Primary custom scheme -->
        <dict>
            <key>CFBundleURLName</key>
            <string>com.lovable.cravlr</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>cravlr</string>
                <string>com.lovable.cravlr</string>
            </array>
        </dict>
        <!-- Capacitor scheme for OAuth callbacks -->
        <dict>
            <key>CFBundleURLName</key>
            <string>capacitor</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>capacitor</string>
            </array>
        </dict>
    </array>
    
    <!-- Associated Domains for Universal Links -->
    <!-- Note: This is configured in Xcode under Signing & Capabilities -->
    <!-- Add entitlement: applinks:cravlr.lovable.app -->
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <!-- For production, use exception domains instead -->
        <key>NSExceptionDomains</key>
        <dict>
            <key>cravlr.lovable.app</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
            <key>lovableproject.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Location Usage Description -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Cravlr needs your location to find nearby food recommendations</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Cravlr uses your location to notify you of nearby food recommendations</string>
    
    <!-- Camera/Photo Library (for future features) -->
    <key>NSCameraUsageDescription</key>
    <string>Cravlr needs camera access to take photos of your food experiences</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Cravlr needs photo library access to share your food photos</string>
    
    <!-- Push Notifications -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
    
    <!-- Capacitor Configuration -->
    <key>WKAppBoundDomains</key>
    <array>
        <string>cravlr.lovable.app</string>
        <string>cravlr.com</string>
        <string>ioqogdxfmapcijmqjcpb.supabase.co</string>
    </array>
</dict>
</plist>
